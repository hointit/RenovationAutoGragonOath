<Window x:Class="AutoDragonOath.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoDragonOath"
        xmlns:vm="clr-namespace:AutoDragonOath.ViewModels"
        mc:Ignorable="d"
        Title="Auto Dragon Oath - Character Monitor" Height="650" Width="520"
        Background="#FF2D2D30"
        Topmost="{Binding IsKeepOnTop}">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <!-- Converter for HP status color -->
        <local:HpStatusToColorConverter x:Key="HpStatusToColorConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1E88E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3E3E42"/>
            <Setter Property="RowBackground" Value="#FF252526"/>
            <Setter Property="AlternatingRowBackground" Value="#FF2D2D30"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#FF3E3E42"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>

        <!-- DataGridColumnHeader Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#FF2D2D30"/>
        </Style>

        <!-- DataGridRow Style -->
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="#FF252526"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E42"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGridCell Style -->
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Padding" Value="10,5"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <CheckBox Content="Keep On Top"
                      IsChecked="{Binding IsKeepOnTop}"
                      Foreground="White"
                      FontWeight="SemiBold"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center">
                <CheckBox.Style>
                    <Style TargetType="CheckBox">
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>
                </CheckBox.Style>
            </CheckBox>
        </Grid>

        <!-- Character List -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Characters}"
                  SelectedItem="{Binding SelectedCharacter}"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <!-- Character Name -->
                <DataGridTextColumn Header="Character" Binding="{Binding CharacterName}" Width="100"/>

                <!-- Level (Important) -->
                <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="#FFFFC107"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- HP % -->
                <DataGridTemplateColumn Header="HP%" Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="{Binding HpStatus, Converter={StaticResource HpStatusToColorConverter}}"
                                    CornerRadius="3" Padding="8,4">
                                <TextBlock Text="{Binding HpPercent, StringFormat={}{0}%}"
                                           Foreground="White"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- MP % -->
                <DataGridTemplateColumn Header="MP%" Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="#FF2196F3" CornerRadius="3" Padding="8,4">
                                <TextBlock Text="{Binding MpPercent, StringFormat={}{0}%}"
                                           Foreground="White"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!-- Map -->
                <DataGridTextColumn Header="Map" Binding="{Binding MapName}" Width="120"/>
                <!-- Position -->
                <DataGridTextColumn Header="Position" Binding="{Binding Position}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Selected Character Details -->
        <Border Grid.Row="2"
                Background="#FF1E1E1E"
                BorderBrush="#FF3E3E42"
                BorderThickness="1"
                Padding="10"
                Visibility="{Binding SelectedCharacter, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Right: Console Log GroupBox (Full Height) -->
                <GroupBox Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Margin="0">
                        <GroupBox.Style>
                            <Style TargetType="GroupBox">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#FF3E3E42"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="12"/>
                            </Style>
                        </GroupBox.Style>

                        <!-- Custom Header with Max Log Display Input -->
                        <GroupBox.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Console Log"
                                           Foreground="White"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Margin="0,0,15,0"/>
                                <TextBlock Text="Max log display:"
                                           Foreground="#FF9E9E9E"
                                           FontWeight="Normal"
                                           VerticalAlignment="Center"
                                           Margin="0,0,5,0"/>
                                <TextBox Text="{Binding SelectedCharacter.MaxLogDisplay, UpdateSourceTrigger=PropertyChanged}"
                                         Width="50"
                                         Background="#FF3E3E42"
                                         Foreground="White"
                                         BorderBrush="#FF007ACC"
                                         Padding="5,2"
                                         VerticalAlignment="Center"
                                         HorizontalContentAlignment="Center"/>
                            </StackPanel>
                        </GroupBox.Header>

                        <TextBox Text="{Binding SelectedCharacter.ConsoleLog, Mode=OneWay}"
                                 IsReadOnly="True"
                                 Background="#FF0C0C0C"
                                 Foreground="#FF00FF00"
                                 BorderThickness="0"
                                 FontFamily="Consolas"
                                 FontSize="10"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="5"/>
                </GroupBox>

                <!-- Bottom-Left: Auto Refresh GroupBox -->
                <GroupBox Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                    <GroupBox.Style>
                        <Style TargetType="GroupBox">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="#FF3E3E42"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Padding" Value="8"/>
                        </Style>
                    </GroupBox.Style>

                    <!-- Custom Header with CheckBox and Character Info -->
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding SelectedCharacter.CharacterHeader}"
                                      IsChecked="{Binding SelectedCharacter.IsAutoRefreshEnabled}"
                                      Foreground="White"
                                      FontWeight="SemiBold"
                                      Margin="0,0,10,0">
                                <CheckBox.Style>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>
                        </StackPanel>
                    </GroupBox.Header>

                    <StackPanel>
                        <!-- Refresh Interval Controls -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Interval:"
                                       Foreground="#FF9E9E9E"
                                       FontWeight="Normal"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0"/>
                            <TextBox Text="{Binding SelectedCharacter.RefreshIntervalSeconds, UpdateSourceTrigger=PropertyChanged}"
                                     Width="50"
                                     Background="#FF3E3E42"
                                     Foreground="White"
                                     BorderBrush="#FF007ACC"
                                     Padding="5,2"
                                     VerticalAlignment="Center"
                                     HorizontalContentAlignment="Center"/>
                            <TextBlock Text="s"
                                       Foreground="#FF9E9E9E"
                                       FontWeight="Normal"
                                       VerticalAlignment="Center"
                                       Margin="3,0,0,0"/>
                        </StackPanel>

                        <!-- Max Level Controls -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Max Level:"
                                       Foreground="#FF9E9E9E"
                                       FontWeight="Normal"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0"/>
                            <TextBox Text="{Binding SelectedCharacter.MaxLevel, UpdateSourceTrigger=PropertyChanged}"
                                     Width="50"
                                     Background="#FF3E3E42"
                                     Foreground="White"
                                     BorderBrush="#FF007ACC"
                                     Padding="5,2"
                                     VerticalAlignment="Center"
                                     HorizontalContentAlignment="Center"/>
                        </StackPanel>

                        <!-- Watched Map Button -->
                        <!-- <Button Content="{Binding SelectedCharacter.WatchedMapDisplay}"
                                Command="{Binding SetWatchedMapCommand}"
                                Background="#FF9C27B0"
                                Margin="0,0,0,10"
                                HorizontalAlignment="Stretch"
                                Padding="8,6"
                                FontSize="12"/> -->

                        <!-- Skills List (2 Columns) -->
                        <TextBlock Text="Skills:"
                                   Foreground="White"
                                   FontWeight="Normal"
                                   Margin="0,5,0,5"/>

                        <ItemsControl ItemsSource="{Binding SelectedCharacter.Skills}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Margin="0,2,5,2" IsChecked="{Binding IsEnabled}">
                                        <CheckBox.Style>
                                            <Style TargetType="CheckBox">
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Style>
                                        </CheckBox.Style>
                                        <CheckBox.Content>
                                            <TextBlock Foreground="White" FontSize="11">
                                                <Run Text="{Binding Hotkey}" FontWeight="Bold" Foreground="#FF007ACC"/>
                                            </TextBlock>
                                        </CheckBox.Content>
                                    </CheckBox>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </Border>
    </Grid>
</Window>
