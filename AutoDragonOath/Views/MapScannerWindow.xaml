<Window x:Class="AutoDragonOath.Views.MapScannerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:AutoDragonOath.Converters"
        mc:Ignorable="d"
        Title="Map Scanner - Find Map Object Pointer"
        Height="800"
        Width="1000"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Converters -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Text style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Button style -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1177BB"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#3F3F46"/>
                    <Setter Property="Foreground" Value="#808080"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Success button style -->
        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#107C10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0E8A0E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary button style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#3F3F46"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#505050"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Terminal TextBox style -->
        <Style x:Key="TerminalStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#0C0C0C"/>
            <Setter Property="Foreground" Value="#00FF00"/>
            <Setter Property="FontFamily" Value="Consolas, Courier New"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#1F1F1F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title & Description -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Map Scanner"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,10"/>
            <TextBlock Foreground="#888888"
                       FontSize="13"
                       TextWrapping="Wrap">
                <Run Text="Find the Map Object Pointer for CWorldManager::s_pMe->m_pActiveScene->m_pTheDefine"/>
                <LineBreak/>
                <Run Text="This tool scans memory for map names and helps you locate the map pointer chain."/>
            </TextBlock>
        </StackPanel>

        <!-- Scenarios Panel -->
        <Border Grid.Row="1"
                Background="#252526"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Scenario 1 -->
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock Style="{StaticResource HeaderStyle}"
                               Text="1. Scan for Map Names"/>
                    <TextBlock Foreground="#CCCCCC"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10">
                        Scans memory for map name strings like "heaven", "nhon nam", "loc duong", etc.
                    </TextBlock>
                    <Button Content="Scan for Map Names"
                            Command="{Binding ScanMapNamesCommand}"
                            Style="{StaticResource ButtonStyle}"
                            HorizontalAlignment="Left"/>
                </StackPanel>

                <!-- Scenario 2 -->
                <StackPanel Grid.Row="0" Grid.Column="2">
                    <TextBlock Style="{StaticResource HeaderStyle}"
                               Text="2. Find Pointers to Map"/>
                    <TextBlock Foreground="#CCCCCC"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10">
                        After finding map strings, scan for pointers pointing to them (szSceneMap field).
                    </TextBlock>
                    <Button Content="Find Map Pointers"
                            Command="{Binding FindMapPointersCommand}"
                            Style="{StaticResource SuccessButtonStyle}"
                            HorizontalAlignment="Left"/>
                </StackPanel>

                <!-- Scenario 3 -->
                <StackPanel Grid.Row="2" Grid.Column="0">
                    <TextBlock Style="{StaticResource HeaderStyle}"
                               Text="3. Test Pointer Chain"/>
                    <TextBlock Foreground="#CCCCCC"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10">
                        Verify if a candidate address is the correct Map Object Pointer.
                    </TextBlock>
                    <Button Content="Test Player Chain"
                            Command="{Binding TestPlayerChainCommand}"
                            Style="{StaticResource ButtonStyle}"
                            HorizontalAlignment="Left"/>
                </StackPanel>

                <!-- Scenario 4 -->
                <StackPanel Grid.Row="2" Grid.Column="2">
                    <TextBlock Style="{StaticResource HeaderStyle}"
                               Text="4. Monitor Map Changes"/>
                    <TextBlock Foreground="#CCCCCC"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10">
                        Watch memory addresses during map change to confirm the correct pointer.
                    </TextBlock>
                    <Button Content="Monitor Map Changes"
                            Command="{Binding MonitorMapChangesCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            HorizontalAlignment="Left"/>
                </StackPanel>

                <!-- Scenario 5 -->
                <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3">
                    <TextBlock Style="{StaticResource HeaderStyle}"
                               Text="5. Scan for Title Structure"/>
                    <TextBlock Foreground="#CCCCCC"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10">
                        Scans memory to find the offset of character title data (m_nTitleNum, m_nCurTitleIndex, title list).
                    </TextBlock>
                    <Button Content="Scan for Titles"
                            Command="{Binding ScanTitlesCommand}"
                            Style="{StaticResource ButtonStyle}"
                            Background="#9C27B0"
                            HorizontalAlignment="Left">
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,15">
            <Button Content="Clear Output"
                    Command="{Binding ClearCommand}"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Margin="0,0,10,0"/>
            <TextBlock Text="ðŸ” Scanning..."
                       Foreground="#FFA500"
                       FontWeight="Bold"
                       FontSize="14"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"
                       Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="#4EC9B0"
                       FontWeight="SemiBold"
                       FontSize="13"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"/>
        </StackPanel>

        <!-- Terminal Output -->
        <Border Grid.Row="3"
                Background="#0C0C0C"
                BorderBrush="#1F1F1F"
                BorderThickness="1"
                CornerRadius="3">
            <ScrollViewer x:Name="OutputScroller"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto">
                <TextBox Text="{Binding OutputText, Mode=OneWay}"
                         Style="{StaticResource TerminalStyle}"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
